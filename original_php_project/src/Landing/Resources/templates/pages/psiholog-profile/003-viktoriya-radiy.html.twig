{% extends '@landing/layout/main.html.twig' %}

{% block page_title %}
    {{ 'Клинический психолог'|trans }}. GoodHelp
    - {{ psihologProfile.fullName|trans }}
{% endblock %}

{% block content %}
    <div class="profile">
        <div class="container-lg pt-md-5 pt-sm-4 pt-3" style="max-width: 1140px">
            <div class="row">
                <div class="col-sm-5">
                    {% include '@landing/pages/psiholog-profile-photo-carousel/' ~ psihologProfile.profileTemplate ~ '.html.twig' %}
                </div>
                <div class="col-sm-7">
                    {% include '@landing/partials/psiholog-profile/_name-and-price.html.twig' with {
                        name: psihologProfile.fullName,
                        price: priceIndividual.price,
                        currency: 'грн'
                    } %}

                    {% include '@landing/partials/psiholog-profile/_book-consultation-btn.html.twig' %}

                    {% include '@landing/partials/psiholog-profile/_experience.html.twig' with {
                        title: "Работаю с клиентами %years% лет"|trans({"%years%": 7}),
                    } %}
                    {% include '@landing/partials/psiholog-profile/_specializations.html.twig' with {
                        specializations: [
                            "Клиническая психология",
                            "Кризисы и травмы",
                            "Работа с шоковой травмой",
                            "Сексология",
                        ]
                    } %}

                    {% include '@landing/partials/psiholog-profile/_list-card.html.twig' with {
                        title: "С чем я работаю лучше всего",
                        list: [
                            "Кризисы и травмы.",
                            "Потери, насилие и зависимости.",
                            "Конфликты в отношениях, тревожность.",
                            "Панические атаки, депрессивные состояния, апатия",
                        ]
                    } %}

                    {% include '@landing/partials/psiholog-profile/_list-card.html.twig' with {
                        title: "Принципы работы, которые я использую",
                        iconClass: 'fa-shield-alt',
                        list: [
                            "Конфиденциальность.",
                            "Компетентное внимание.",
                            "Поддержка.",
                        ]
                    } %}
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <div class="card text-center">
                        <div class="card-header">
                            {% include '@landing/partials/psiholog-profile/_tabs.html.twig' %}
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="about-psiholog" role="tabpanel"
                                     aria-labelledby="about-psiholog-tab">

                                    {% include '@landing/partials/psiholog-profile/_list-card.html.twig' with {
                                        title: "С какими клиентами и запросами я работаю:",
                                        iconClass: 'fa-plus',
                                        cardClass: ' border-0 text-start',
                                        cardTextClass: '  mt-3 ms-1',
                                        list: [
                                            'Женщины, мужчины, пары, семьи, лгбт, военные, беженцы, одинокие мамы, подростки от 12 лет.',
                                            'Нестабильность настроения, тревожность. ',
                                            'Нехарактерные панические атаки и вспышки ярости.',
                                            'Трудности в личных отношениях.',
                                            'Чувство депрессии, безнадежности и оцепенения ',
                                            'Беспокойство, раздражительность и чрезмерный страх, длительные периоды плача или сна.',
                                            'Трудности в поддержании умственной концентрации и выполнении повседневных дел.',
                                            'Проблемы со сном, повторяющиеся кошмары и тревожные воспоминания.',
                                            'Физические заболевания (например, головные боли, боли в животе, проблемы со спиной).',
                                            'Злоупотребление психоактивными веществами или уход от друзей и семьи.',
                                        ]
                                    } %}

                                    {% include '@landing/partials/psiholog-profile/_list-card.html.twig' with {
                                        title: "С какими клиентами и запросами я не работаю:",
                                        iconClass: 'fa-minus',
                                        cardClass: ' border-0 text-start',
                                        cardTextClass: '  mt-3 ms-1',
                                        list: [
                                            "С людьми в острых психотических состояниях.",
                                        ]
                                    } %}

                                    <hr>

                                    <div class="accordion accordion-flush" id="accordionExample">
                                        {% set accordionItemNumber = 0 %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Какие результаты получают клиенты",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Понимают, чем хотят заниматься, чего хотят от жизни, от отношений. ',
                                                'Находят новую работу, меняют ситуацию на текущей работе.',
                                                'Избавляются от травм прошлого, которые мешают жить счастливой и наполненной жизнью.',
                                                'Чувствуют себя свободнее и избавляются от надоевших стереотипов.',
                                                'Избавляются от страха перемен и страха добиться успеха.',
                                                'Меняют материальное положение и отношения с деньгами.',
                                                'Умеют отказывать и отстаивать свои интересы, говорить «нет».',
                                                'Преодолевают ограничения и страхи.',
                                                'Достигают желаемого.',
                                                'Избавляются от тревоги, депрессии.',
                                                'Чувствуют себя хорошим родителем.',
                                                'Чувствуют, что знают, как строить отношения с детьми.',
                                                'Знают, как переживать детские кризисы и поддерживать баланс между свободой и границами.',
                                            ]
                                        } %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Почему стоит обратиться именно ко мне",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Внимательно работаю с запросом клиента.',
                                                'Постоянно обучаюсь и повышаю квалификацию.',
                                                'Собственный опыт прохождения через кризисы.',
                                            ]
                                        } %}


                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Базовое психологическое образование",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Киевский Институт Современной Психологии и Психотерапии, клинический психолог.',
                                            ]
                                        } %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Где я обучалась психотерапии",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Гештальт-терапия, 2015-2019 года обучения Кулишова В., Сытник С., Поповский А.',
                                            ]
                                        } %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Дополнительное образование (тренинги, курсы, лекции)",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Танце-двигательная терапия В.Костевич. 2015.',
                                                'Работа с сексуальной тематикой в Гештальт подходе Г.Елизарова. 2016.',
                                                'Возрастные кризисы Е.Баева. 2017.',
                                                'Системные семейные расстановки Е.Голованова. 2020.',
                                                'Опыт тренинговых программ личностного роста.',
                                                'Владение психодиагностическими методиками (Роршах, ММРІ, Сонди)',
                                            ]
                                        } %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Методы и подходы, которые использую",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Диалог.',
                                                'Расстановки.',
                                                'Телесные практики.',
                                                'Метафорические карты.',
                                            ]
                                        } %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% embed '@landing/partials/psiholog-profile/_accordion-item-card.html.twig' with {
                                            buttonTitle: "Как и почему я стала психологом",
                                            itemNumber: accordionItemNumber,
                                        } %}
                                            {% block cardText %}
                                                {{ 'viktoriya_radiy_why_i_became_psi'|trans }}
                                            {% endblock %}
                                        {% endembed %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% embed '@landing/partials/psiholog-profile/_accordion-item-card.html.twig' with {
                                            buttonTitle: "Кратко обо мне как о личности",
                                            itemNumber: accordionItemNumber,
                                        } %}
                                            {% block cardText %}
                                                {{ 'Не замужем, есть сын 5 лет.'|trans }}
                                            {% endblock %}
                                        {% endembed %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% embed '@landing/partials/psiholog-profile/_accordion-item.html.twig' with {
                                            buttonTitle: "Сколько нужно встреч для решения моей проблемы?",
                                            itemNumber: accordionItemNumber,
                                        } %}
                                            {% block body %}
                                                {% include '@landing/partials/psiholog-profile/_what-can-i-get-for-n-consultations.html.twig' %}
                                            {% endblock %}
                                        {% endembed %}


                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% embed '@landing/partials/psiholog-profile/_accordion-item.html.twig' with {
                                            buttonTitle: "Языки на которых консультирую",
                                            itemNumber: accordionItemNumber,
                                        } %}
                                            {% block body %}
                                                {{ 'Украинский, русский и английский.'|trans }}
                                            {% endblock %}
                                        {% endembed %}
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="psiholog-reviews" role="tabpanel"
                                     aria-labelledby="psiholog-reviews-tab">
                                    {% include '@landing/partials/psiholog-profile/_reviews.html.twig' %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {% include '@landing/partials/psiholog-profile/_failed-to-book.html.twig' %}

            <div class="row">
                <div class="col-12">
                    {% include '@landing/partials/psiholog-profile/_book-consultation.html.twig' with {schedule: schedule} %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}