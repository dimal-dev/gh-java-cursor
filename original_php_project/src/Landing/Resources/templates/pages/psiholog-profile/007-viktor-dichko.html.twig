{% extends '@landing/layout/main.html.twig' %}

{% block page_title %}
    {{ 'Cпециалист по зависимостям'|trans }}. GoodHelp
    - {{ psihologProfile.fullName|trans }}
{% endblock %}

{% block content %}
    <div class="profile">
        <div class="container-lg pt-md-5 pt-sm-4 pt-3" style="max-width: 1140px">
            <div class="row">
                <div class="col-sm-5">
                    {% include '@landing/pages/psiholog-profile-photo-carousel/' ~ psihologProfile.profileTemplate ~ '.html.twig' %}
                </div>
                <div class="col-sm-7">
                    {% include '@landing/partials/psiholog-profile/_name-and-price.html.twig' with {
                        name: psihologProfile.fullName,
                        price: priceIndividual.price,
                        currency: 'грн'
                    } %}

                    {% include '@landing/partials/psiholog-profile/_book-consultation-btn.html.twig' %}

                    {% include '@landing/partials/psiholog-profile/_experience.html.twig' with {
                        title: "Работаю с клиентами %years% лет"|trans({"%years%": 12}),
                        text: "За это время ко мне обратилось более %people% человек в личную, семейную и парную терапию"|trans({"%people%": 1000})
                    } %}
                    {% include '@landing/partials/psiholog-profile/_specializations.html.twig' with {
                        specializations: [
                            'Cпециалист по зависимостям',
                            'Семейный психолог',
                        ]
                    } %}

                    {% include '@landing/partials/psiholog-profile/_list-card.html.twig' with {
                        title: "С чем я работаю лучше всего",
                        list: [
                            'Зависимое поведение.',
                            'Одиночество.',
                        ]
                    } %}

                    {% include '@landing/partials/psiholog-profile/_list-card.html.twig' with {
                        title: "Принципы работы, которые я использую",
                        iconClass: 'fa-shield-alt',
                        list: [
                            'Атмосфера безопасности.',
                            'Конфиденциальность.',
                            'Уникальность и неповторимость каждого клиента.',
                        ]
                    } %}
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <div class="card text-center">
                        <div class="card-header">
                            {% include '@landing/partials/psiholog-profile/_tabs.html.twig' %}
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="about-psiholog" role="tabpanel"
                                     aria-labelledby="about-psiholog-tab">
                                    {% include '@landing/partials/psiholog-profile/_list-card.html.twig' with {
                                        title: "С какими клиентами и запросами я работаю:",
                                        iconClass: 'fa-plus',
                                        cardClass: ' border-0 text-start',
                                        cardTextClass: '  mt-3 ms-1',
                                        list: [
                                            'Взрослые мужчины и женщины.',
                                            'Пожилые 60+',
                                            'Пары и семьи.',
                                            'Военные и беженцы.',
                                            'Одинокие мамы.',
                                            'Сложности в отношениях и взаимопонимании.',
                                            'Одиночество среди людей и близких.',
                                            'Тревожность, депрессия, страхи.',
                                            'Симптом, зависимое поведение.',
                                            'Специалисты начинающие и профессионально выгорающие.',
                                            'Руководители на пике и на спаде карьеры.',

                                        ]
                                    } %}

                                    {% include '@landing/partials/psiholog-profile/_list-card.html.twig' with {
                                        title: "С какими клиентами и запросами я не работаю:",
                                        iconClass: 'fa-minus',
                                        cardClass: ' border-0 text-start',
                                        cardTextClass: '  mt-3 ms-1',
                                        list: [
                                            'С детьми.',
                                            'С людьми, у которых психиатрические диагнозы.',
                                            'С людьми которые не способны самостоятельно оплачивать терапию.',
                                        ]
                                    } %}

                                    <hr>

                                    <div class="accordion accordion-flush" id="accordionExample">
                                        {% set accordionItemNumber = 0 %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Почему стоит обратиться именно ко мне",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'У меня большой разноплановый, результативный опыт как: психолог, психотерапевт, экономист, инженер, руководитель, муж, отец.',
                                                'Проходил обучение в восьми разно профильных вузах, что дает целостное видение ситуации.',
                                                'Применяемые мной методы, методологии, подходы ориентированы на результат, имеют практическую историю и постоянно совершенствуются.',
                                                'Я продолжаю обучение в уникальном Народном Академическом Университете Эволюции Разума, открывающем новые возможности построения гармоничных отношений.',
                                                '33 года семейной жизни, с каждым годом все больше взаимопонимания и взаимоуважения, я знаю как строить отношения.',
                                            ]
                                        } %}


                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Базовое психологическое образование",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Национальный педагогический университет им. М. П. Драгоманова, факультет «Практическая психология»',
                                            ]
                                        } %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Где я обучался психотерапии",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                '«Диалоговая гештальт-терапия». Тренер: Погодин И. МГИ.',
                                                '«Гештальт-психотерапия зависимостей». Тренеры: Лобанов С., Любарец О. МГИ.',
                                                '«Самоизбавление от алкогольной и табачной зависимости, переедания и других вредных привычек, по методу Г.А. Шичко». Международная Ассоциация психоаналитиков при СБНТ, профессор Жданов В.Г.',
                                                '«Зрительное переобучение по методу Шичко-Бейтса». Международная Ассоциация психоаналитиков при СБНТ, профессор Жданов В.Г.',
                                            ]
                                        } %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Дополнительное образование (тренинги, курсы, лекции)",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Украинская Ассоциация психоанализа ЕКППУ Международный институт Глубинной Психологии «Техника психоанализа», профессор Жерар Помье.',
                                                'Украинская Ассоциация психоанализа ЕКППУ Международный институт Глубинной Психологии «Психоанализ и трансформационная лингвистика», Рясенко С.И.',
                                                'МГИ. «Диалог, присутствие и феноменология в гештальт –терапии», Погодин И.',
                                                'МГИ. «Близость, Привязанность ,Зависимость», Лобанов С.,Любарец О.',
                                                'МГИ. «Рискуя Быть Живым», Погодин И.',
                                                'Школа СУЗ. «Система управления здоровьем», Д.Шаменкова.',
                                                'Школа СУЗ. «Открытый Диалог», Д. Шаменков.',
                                                '«Базовый курс Ценности», «Методика VALUES», Виктория Андриевская',
                                                'Международная высшая школа Академика А.Н. Малюты «Новый Универсум». Методология «Инвариантное Моделирование»',
                                            ]
                                        } %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Методы и подходы, которые использую",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Открытый Диалог.',
                                                'Эксперименты гештальт-терапии.',
                                                'Работа с метафорическими картами.',
                                            ]
                                        } %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% embed '@landing/partials/psiholog-profile/_accordion-item-card.html.twig' with {
                                            buttonTitle: "Как и почему я стал психологом",
                                            itemNumber: accordionItemNumber,
                                        } %}
                                            {% block cardText %}
                                                {{ 'viktor_dichko_how_i_became_psi'|trans|raw }}
                                            {% endblock %}
                                        {% endembed %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% embed '@landing/partials/psiholog-profile/_accordion-item-card.html.twig' with {
                                            buttonTitle: "Кратко обо мне как о личности",
                                            itemNumber: accordionItemNumber,
                                        } %}
                                            {% block cardText %}
                                                {{ 'viktor_dichko_about'|trans|raw }}
                                            {% endblock %}
                                        {% endembed %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% embed '@landing/partials/psiholog-profile/_accordion-item.html.twig' with {
                                            buttonTitle: "Сколько нужно встреч для решения моей проблемы?",
                                            itemNumber: accordionItemNumber,
                                        } %}
                                            {% block body %}
                                                {% include '@landing/partials/psiholog-profile/_what-can-i-get-for-n-consultations.html.twig' %}
                                            {% endblock %}
                                        {% endembed %}


                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% embed '@landing/partials/psiholog-profile/_accordion-item.html.twig' with {
                                            buttonTitle: "Языки на которых консультирую",
                                            itemNumber: accordionItemNumber,
                                        } %}
                                            {% block body %}
                                                {{ 'Украинский и русский.'|trans }}
                                            {% endblock %}
                                        {% endembed %}
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="psiholog-reviews" role="tabpanel"
                                     aria-labelledby="psiholog-reviews-tab">
                                    {% include '@landing/partials/psiholog-profile/_reviews.html.twig' %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {% include '@landing/partials/psiholog-profile/_failed-to-book.html.twig' %}

            <div class="row">
                <div class="col-12">
                    {% include '@landing/partials/psiholog-profile/_book-consultation.html.twig' with {schedule: schedule} %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}