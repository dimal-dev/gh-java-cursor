{% extends '@landing/layout/main.html.twig' %}

{% block page_title %}
    {{ 'Психолог по работе с тревожными и депрессивными состояниями'|trans }}. GoodHelp
    - {{ psihologProfile.fullName|trans }}
{% endblock %}

{% block content %}
    <div class="profile">
        <div class="container-lg pt-md-5 pt-sm-4 pt-3" style="max-width: 1140px">
            <div class="row">
                <div class="col-sm-5">
                    {% include '@landing/pages/psiholog-profile-photo-carousel/' ~ psihologProfile.profileTemplate ~ '.html.twig' %}
                </div>
                <div class="col-sm-7">
                    {% include '@landing/partials/psiholog-profile/_name-and-price.html.twig' with {
                        name: psihologProfile.fullName,
                        price: priceIndividual.price,
                        currency: 'грн'
                    } %}

                    {% include '@landing/partials/psiholog-profile/_book-consultation-btn.html.twig' %}

                    {% include '@landing/partials/psiholog-profile/_experience.html.twig' with {
                        title: "Работаю с клиентами %years% лет"|trans({"%years%": 11}),
                        text: "За это время ко мне обратилось более %people% человек"|trans({"%people%": 1000})
                    } %}
                    {% include '@landing/partials/psiholog-profile/_specializations.html.twig' with {
                        specializations: [
                            'Работа с детьми и подростками',
                            'Реадаптация военнослужащих и членов их семей',
                            'Семейная психотерапия',
                            'Психосоматика',
                        ]
                    } %}

                    {% include '@landing/partials/psiholog-profile/_list-card.html.twig' with {
                        title: "С чем я работаю лучше всего",
                        list: [
                            'С депрессией.',
                            'С тревогой и страхом.',
                            'С кризисами.',
                            'С семьями и парами.',
                            'С подростками.',
                        ]
                    } %}

                    {% include '@landing/partials/psiholog-profile/_list-card.html.twig' with {
                        title: "Принципы работы, которые я использую",
                        iconClass: 'fa-shield-alt',
                        list: [
                            'Конфиденциальность.',
                            'Безопасность.',
                            'Уважение.',
                        ]
                    } %}
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <div class="card text-center">
                        <div class="card-header">
                            {% include '@landing/partials/psiholog-profile/_tabs.html.twig' %}
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="about-psiholog" role="tabpanel"
                                     aria-labelledby="about-psiholog-tab">
                                    {% include '@landing/partials/psiholog-profile/_list-card.html.twig' with {
                                        title: "С какими клиентами и запросами я работаю:",
                                        iconClass: 'fa-plus',
                                        cardClass: ' border-0 text-start',
                                        cardTextClass: '  mt-3 ms-1',
                                        list: [
                                            'Депрессии, тревоги, страхи.',
                                            'Сложности в отношениях.',
                                            'Кризисы возрастные, профессиональные.',
                                        ]
                                    } %}

                                    {% include '@landing/partials/psiholog-profile/_list-card.html.twig' with {
                                        title: "С какими клиентами и запросами я не работаю:",
                                        iconClass: 'fa-minus',
                                        cardClass: ' border-0 text-start',
                                        cardTextClass: '  mt-3 ms-1',
                                        list: [
                                            'Нарушения пищевого поведения.',
                                            'Химические зависимости.',
                                        ]
                                    } %}

                                    <hr>

                                    <div class="accordion accordion-flush" id="accordionExample">
                                        {% set accordionItemNumber = 0 %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Почему стоит обратиться именно ко мне",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Веду стабильную психологическую практику с 2011 года.',
                                                'За годы работы сотни моих клиентов получили профессиональную помощь и поддержку.',
                                                'Прошел более 200 часов личной терапии.',
                                                'Защитил диссертацию на тему /Диагностика и психокоррекция психогенных депрессивных расстройств/.',
                                                'В соавторстве с д.м.н. профессором Руль Ю.В. мною разработана и успешно опробована авторская программа диагностики и психотерапии депрессии.',
                                                'Окончив 3 специализации в области семейной и детской психотерапии, я с огромным интересом работаю с семьями и подростками.',
                                                'Каждый клиент для меня интересен, важен и уникален, в своей работе я использую различные методы и техники психотерапии и психокоррекции.',
                                                'Сейчас продолжаю профильное обучение, совершенствую свою профессиональную квалификацию.',
                                                'Регулярно прохожу супервизию практики.',
                                            ]
                                        } %}


                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Базовое психологическое образование",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Доктор философии в области психологии /Международная кадровая академия/.',
                                                'Магистр психологии. Специализация: Медицинская психология /Межрегиональная Академия Управления Персоналом/.',
                                            ]
                                        } %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Дополнительное образование (тренинги, курсы, лекции)",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Гештальт-терапевт /МГИ/.',
                                                'Гештальт-терапия с детьми.',
                                                'Реадаптация военнослужащих и членов их семей.',
                                                'Основы групповой психотерапии.',
                                                'Основы профессионального консультирования.',
                                                'Семейная психотерапия.',
                                                'Психосоматика.',
                                                'Психоанализ.',
                                                'Работа с детьми и подростками.',
                                            ]
                                        } %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% include '@landing/partials/psiholog-profile/_accordion-item-list.html.twig' with {
                                            buttonTitle: "Методы и подходы, которые использую",
                                            itemNumber: accordionItemNumber,
                                            list: [
                                                'Гештальт-терапия.',
                                                'КПТ.',
                                            ]
                                        } %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% embed '@landing/partials/psiholog-profile/_accordion-item-card.html.twig' with {
                                            buttonTitle: "Как и почему я стал психологом",
                                            itemNumber: accordionItemNumber,
                                        } %}
                                            {% block cardText %}
                                                {{ 'artem_khmelevskiy_how_i_became_psi'|trans|raw }}
                                            {% endblock %}
                                        {% endembed %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% embed '@landing/partials/psiholog-profile/_accordion-item-card.html.twig' with {
                                            buttonTitle: "Кратко обо мне как о личности",
                                            itemNumber: accordionItemNumber,
                                        } %}
                                            {% block cardText %}
                                                {{ 'artem_khmelevskiy_about'|trans|raw }}
                                            {% endblock %}
                                        {% endembed %}

                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% embed '@landing/partials/psiholog-profile/_accordion-item.html.twig' with {
                                            buttonTitle: "Сколько нужно встреч для решения моей проблемы?",
                                            itemNumber: accordionItemNumber,
                                        } %}
                                            {% block body %}
                                                {% include '@landing/partials/psiholog-profile/_what-can-i-get-for-n-consultations.html.twig' %}
                                            {% endblock %}
                                        {% endembed %}


                                        {% set accordionItemNumber = accordionItemNumber + 1 %}
                                        {% embed '@landing/partials/psiholog-profile/_accordion-item.html.twig' with {
                                            buttonTitle: "Языки на которых консультирую",
                                            itemNumber: accordionItemNumber,
                                        } %}
                                            {% block body %}
                                                {{ 'Русский'|trans }}
                                            {% endblock %}
                                        {% endembed %}
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="psiholog-reviews" role="tabpanel"
                                     aria-labelledby="psiholog-reviews-tab">
                                    {% include '@landing/partials/psiholog-profile/_reviews.html.twig' %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {% include '@landing/partials/psiholog-profile/_failed-to-book.html.twig' %}

            <div class="row">
                <div class="col-12">
                    {% include '@landing/partials/psiholog-profile/_book-consultation.html.twig' with {schedule: schedule} %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}