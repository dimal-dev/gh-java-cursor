{% extends '@psiholog/layout/main.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col">
            <div class="kt-portlet kt-portlet--tabs">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-toolbar">
                        <ul class="nav nav-tabs nav-tabs-line nav-tabs-line-brand nav-tabs-line-2x nav-tabs-line-right nav-tabs-bold"
                            role="tablist">
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.attributes.get('_route') == constant('\\App\\Psiholog\\Service\\RouteNames::PAYMENTS') ? 'active' : '' }}"
                                   href="{{ url(constant('\\App\\Psiholog\\Service\\RouteNames::PAYMENTS')) }}">
                                    <i class="fa fa-money-bill-alt" aria-hidden="true"></i>Текущая выплата
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.attributes.get('_route') == constant('\\App\\Psiholog\\Service\\RouteNames::PAYMENTS_HISTORY') ? 'active' : '' }}"
                                   href="{{ url(constant('\\App\\Psiholog\\Service\\RouteNames::PAYMENTS_HISTORY')) }}">
                                    <i class="fa fa-clipboard-list" aria-hidden="true"></i>История выплат
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <div class="tab-content">
                        <div class="tab-pane active" role="tabpanel">
                            {% block paymentsLayoutContent %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .accordion.accordion-outline .card .card-header .card-title:after {
            content: "";
        }
    </style>
{% endblock %}