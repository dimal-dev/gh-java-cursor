{% extends '@psiholog/layout/main.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-12 mt-3">
            <form action="" method="post">
                <div class="form-group row">
                    <label class="col-xl-4 col-lg-4 col-form-label">Имя пользователя</label>
                    <div class="col-lg-8 col-xl-6">
                        <input class="form-control" type="text" value="{{ userName }}" name="newName">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-9 col-xl-6">
